<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
    /* Reset default margin and padding */
    body,
    h1,
    h2,
    h3,
    p,
    ul,
    li {
        margin: 0;
        padding: 0;
    }

    /* Basic styling for the header */
    header {
        background-color: #333;
        color: #fff;
        padding: 10px 0;
    }

    /* Styling for the header navigation */
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
    }

    /* Adjust the header text styling */
    h1 {
        font-size: 24px;
        margin-right: 20px;
    }

    /* Styling for the navigation links */
    ul {
        list-style: none;
        display: flex;
    }

    ul li {
        margin: 0 10px;
    }

    ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 14px;
    }

    /* Make the header navigation responsive */
    @media screen and (max-width: 768px) {
        nav {
            flex-direction: column;
            align-items: flex-start;
        }

        h1 {
            margin-bottom: 10px;
        }

        ul {
            margin-top: 10px;
        }

        ul li {
            margin: 5px 0;
        }
    }
</style>
<header>
    <nav>
        <h1>Codeial</h1>
        <% if(locals.user) {%>
            <li>
                <a href="/users/profile/<%=user.id%>"> <%=user.name%> </a>
            </li>

            <li>
                <a href="/users/sign-out"> Sign Out </a>
            </li>
        <%}else{%>
            <li>
                <a href="/users/sign-in"> Sign In </a>
            </li>
            <li>
                <a href="/users/sign-up"> Sign Up </a>
            </li>
        <%}%>
    </nav>
</header>